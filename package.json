    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.3.1",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "pg": "^8.18.0",
    "prisma": "^7.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
